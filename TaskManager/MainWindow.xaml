<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        xmlns:manager="clr-namespace:TKScripts.Manager.ScriptManage;assembly=TKScripts.Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Name="main">
    <Grid>
        <manager:ScriptTaskManager Width="{Binding ElementName=main,Path=ActualWidth}"
                                   Height="{Binding ElementName=main,Path=ActualHeight}"></manager:ScriptTaskManager>
    </Grid>
</Window>
