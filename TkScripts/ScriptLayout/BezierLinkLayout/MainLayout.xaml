<local:IScriptLayout x:Class="TkScripts.ScriptLayout.BezierLinkLayout.MainLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TkScripts.Interface"
             mc:Ignorable="d" KeyDown="MainLayout_KeyDown" KeyUp="MainLayout_KeyUp"
             x:Name="main" Background="#00000000" MouseLeave="contentsCanvas_MouseLeave">
    <Canvas>
        <Canvas  Canvas.Left="{Binding ElementName=main,Path=ContentX}" Background="#232323" Width="2000000" Height="2000000"
                            Canvas.Top="{Binding ElementName=main,Path=ContentY}" Name="contentsCanvas" MouseDown="contentsCanvas_MouseDown"
                  MouseMove="contentsCanvas_MouseMove" MouseUp="contentsCanvas_MouseUp" MouseWheel="contentsCanvas_MouseWheel">
        </Canvas>
    </Canvas>
</local:IScriptLayout>
