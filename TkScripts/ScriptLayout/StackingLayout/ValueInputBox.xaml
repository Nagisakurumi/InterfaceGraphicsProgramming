<local:MLInputBox x:Class="TkScripts.ScriptLayout.BezierLinkLayout.ScriptIParameterLayout.ValueInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TkScripts.ScriptLayout.BezierLinkLayout.ScriptIParameterLayout"
             mc:Ignorable="d" 
             >
    <Border BorderThickness="1" CornerRadius="4" BorderBrush="White">
        <TextBox Background="#232323" Foreground="White" CaretBrush="White" Name="value" VerticalContentAlignment="Center" Text="{Binding Path=Value, Mode=TwoWay}"></TextBox>
    </Border>
</local:MLInputBox>
