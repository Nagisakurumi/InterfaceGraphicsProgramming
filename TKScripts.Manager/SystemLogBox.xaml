<UserControl x:Class="TKScripts.Manager.SystemLogBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TKScripts.Manager"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="White" BorderThickness="3" CornerRadius="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <RichTextBox Name="LogRich" Background="#454545" Foreground="White" ScrollViewer.PanningMode="VerticalOnly" ScrollViewer.PanningRatio="10" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Visible" IsReadOnly="True">
            <FlowDocument>
                <Paragraph>
                    <Run Name="LogText" Text=""  Foreground="White"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Border>
</UserControl>
